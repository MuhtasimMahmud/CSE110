public class Task3
{
  public static void main(String[]args)
  {
    int a[]=new int[]{10,30,20,50,40};
    int max=a[0];
    int temp=0;
    for(int i=1;i<a.length;i++)
    {
      if(a[i]>max)
      {
        max=a[i];
        temp=i;
      }
    }
    System.out.println("Largest number is "+max);
    System.out.println("Largest number was found at location "+temp);
  }
}