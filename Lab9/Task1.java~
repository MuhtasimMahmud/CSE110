import java.util.Scanner;
public class Task1
{
  public static void main(String[]args)
  {
    Scanner sc=new Scanner(System.in);
    int a[]=new int[3];
    int b[]=new int[3];
    int temp=0;
    int sum=0;
    for(int i=0;i<3;i++)
    {
      System.out.println("Please give me a number");
      a[i]=sc.nextInt();
      sum=sum+a[i];
      a[temp]=a[i];
      temp++;
    }
    System.out.println(sum);
    for(int i=0;i<3;i++)
    {
      System.out.print(b[i]+" ");
    }
  }
}